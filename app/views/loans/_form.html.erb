<div class="pd-ltr-20 xs-pd-20-10">
<div class="min-height-200px">
	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>New Loan</h4>
				</div>
				<nav aria-label="breadcrumb" role="navigation">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="index.html">Home</a>
						</li>
						<li class="breadcrumb-item">
							<a href="/leaders">Leader</a>
						</li>
						<li class="breadcrumb-item">
							<a href="/applicant_users">Applicant user</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							New Loan
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
	<!-- Default Basic Forms Start -->
	<div class="pd-20 card-box mb-30">
		<div class="clearfix">
			<div class="pull-left">
				<h4 class="text-blue h4">Loan Application</h4>
				<p class="mb-30"></p>
			</div>
			<%= link_to 'Back', :back, class: 'btn btn-primary btn-sm pull-right' %>
		</div>
        <%= form_for @loan, html: { class: "form-horizontal form-label-left", id: "area_form", "data-parsley-validate": "" } do |f| %>
		<form action="<% new_loan_path %>">
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Loan Amount</label>
				<div class="col-sm-12 col-md-10">
                  <%= f.text_field :loan_amount, class: "form-control", placeholder:"10000", required: true %>
				</div>
			</div>
   <%=  puts "----------------11--------#{@leader_id}" %>

            

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">ROI</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :roi, class: "form-control", placeholder:"10.02", required: true %>
				</div>
			</div>
		
			<%# <div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Email</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :tenure_weeks, class: "form-control", placeholder:"20", type: "email", required: true %>
				<%# </div> %>
			<%# </div> %>
			
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Tenure Weeks</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :tenure_weeks, class: "form-control", placeholder:"20", type: "number", required: true %>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Weekly Collection Amount</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :weekly_collection_amount, class: "form-control", placeholder:"650", required: true %>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Disbursment Amount</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :disbursement_amount, class: "form-control", placeholder:"9000", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Loan Disbursement Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :disbursement_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">First EWI Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :first_ewi_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Weekly Collection Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :weekly_collection_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Loan Closing Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :loan_closing_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Leader Name</label>
				<div class="col-sm-12 col-md-10">
					<% if @leader_id.present? %>
					<%= f.collection_select :leader_id, Leader.all, :id, :first_name, { selected: @leader_id, prompt: "Select a Leader" }, { class: "form-control", required: true, disabled: true } %>
					<%= f.hidden_field :leader_id, value: @leader_id %>
					<% else @au_id.present? %>
					<%= f.collection_select :applicant_user_id, ApplicantUser.all, :id, :first_name, {selected: @au_id, prompt: "Select a ApplicantUser" }, { class: "form-control", required: true, disabled: true } %>
            	<%= f.hidden_field :applicant_user_id, value: @au_id %>
					<% end %>
				</div>
			</div> 



			<div class="clearfix">
			<div class="pull-left">
				<p class="mb-30"></p>
				 <input class="btn btn-primary" type="submit" value="Submit" />
				<p class="mb-30"></p>
			</div>
		</div>

			<% end %>
		<%# </form> %>

	  </div>
	<!-- Default Basic Forms End -->
	</div>
</div>
	

