                   <%= f.text_field :tenure_weeks, class: "form-control", placeholder:"20", type: "number", required: true %>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Weekly Collection Amount</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :weekly_collection_amount, class: "form-control", placeholder:"650", required: true %>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Disbursment Amount</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :disbursement_amount, class: "form-control", placeholder:"9000", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Loan Disbursement Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :disbursement_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">First EWI Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :first_ewi_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Weekly Collection Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :weekly_collection_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
				</div>
			</div>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Loan Closing Date</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :loan_closing_date, class: "form-control date-picker", placeholder:"Select Date", required: true %>
