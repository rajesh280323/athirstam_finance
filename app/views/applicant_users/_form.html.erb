<div class="pd-ltr-20 xs-pd-20-10">
<div class="min-height-200px">
	<div class="page-header">
		<div class="row">
			<div class="col-md-6 col-sm-12">
				<div class="title">
					<h4>New Applicant User</h4>
				</div>

				<nav aria-label="breadcrumb" role="navigation" style="width: 419px;">
					<ol class="breadcrumb">
						<li class="breadcrumb-item">
							<a href="/home">Dashboard</a>
						</li>
						<li class="breadcrumb-item">
							<a href="/areas">Area</a>
						</li>
						<li class="breadcrumb-item">
							<a href="/leaders">Leader</a>
						</li>
						<li class="breadcrumb-item active" aria-current="page">
							New Applicant User
						</li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
	<!-- Default Basic Forms Start -->
	<div class="pd-20 card-box mb-30">
		<div class="clearfix">
			<div class="pull-left">
				<h4 class="text-blue h4">Form Application</h4>
				<p class="mb-30"></p>
			</div>
			<%= link_to 'Back', :back, class: 'btn btn-primary btn-sm pull-right' %>
		</div>
        <%= form_for @applicant_user, html: { class: "form-horizontal form-label-left", id: "area_form", "data-parsley-validate": "" } do |f| %>
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">First Name</label>
				<div class="col-sm-12 col-md-10">
                  <%= f.text_field :first_name, class: "form-control", placeholder:"John", required: true %>
				</div>
			</div>
         <%= f.hidden_field :leader_id, value: @leader.id  %>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Last Name</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :last_name, class: "form-control", placeholder:"N", required: true %>
				</div>
			</div>
		
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Email</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :email, class: "form-control", placeholder:"abc@gmail.com", type: "email" %>
				</div>
			</div>
			
			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Phone Number</label>
				<div class="col-sm-12 col-md-10">
                   <%= f.text_field :phone_number, class: "form-control", placeholder:"9998887777", required: true %>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Area</label>
				<div class="col-sm-12 col-md-10">
			<% if @required == "New" %>
 				<%= f.collection_select :area, Area.all, :id, :name, {selected: @leader.area_id, prompt: "Select an Area" }, { class: "form-control", required: true } %>
			<% else %>
 				<%= f.collection_select :area, Area.all, :id, :name, { prompt: "Select an Area" }, { class: "form-control", required: true, disabled: true } %>
			<% end %>
				</div>
			</div> 

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Property Status</label>
				<div class="col-sm-12 col-md-10">
 			<%= f.collection_select :property, @properties, :itself, :itself, { prompt: "Select an Property" }, { class: "form-control", required: true } %>
				</div>
			</div> 

			<div class="form-group row">
				<label class="col-sm-12 col-md-2 col-form-label">Leader Name</label>
				<div class="col-sm-12 col-md-10">
					<% if @required == "New" %>
					<%= f.collection_select :leader_id, Leader.all, :id, :first_name, { selected: @leader.id, prompt: "Select a Leader" }, { class: "form-control", readonly: true, disabled: true } %>
					<% else %>
					<%= f.collection_select :leader_id, Leader.all, :id, :first_name, {  prompt: "Select a Leader" }, { class: "form-control", readonly: true, disabled: true } %>
					<% end %>

				</div>
			</div> 

			<div class="clearfix">
			<div class="pull-left">
				<p class="mb-30"></p>
				 <input class="btn btn-primary" type="submit" value="Submit" />
				<p class="mb-30"></p>
			</div>
		</div>
	<% end %>

	  </div>
	<!-- Default Basic Forms End -->
	</div>
</div>


 <script>
  $(document).ready(function() {
    $('.left-side-applicant-users').addClass('active');
  });
</script>