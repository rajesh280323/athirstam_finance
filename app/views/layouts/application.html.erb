    <%if current_employee%>
        <%= render '/layouts/after_login_header' %>
        <%= render '/layouts/left_sidebar' %>
        <div class="mobile-menu-overlay"></div>
        <div class="main-container">
            <% flash.each do |key, value| %>
              <div id="full_alert" style="">
              <div class="alert alert-<%= key %>" style="border-radius: 5px;">
              <h2 style="text-align: center; font-size: 17px; padding-top: 5px;padding-bottom: 5px;"><%= value %></h2>
              </div>
              </div>
            <% end %>
            <%= yield %>
            <%# <div class="footer-wrap pd-20 mb-20 card-box">
               Ror
              <a href="" target="_blank"></a>
          </div> %>
        </div>
    <%else%>
        <%#= render '/layouts/before_login_header' %>
          <% if flash[:alert] %>
            <div class="alert alert-danger" style="text-align:center; margin-bottom: auto;">
              <%= flash[:alert] %>
            </div>
          <% elsif flash[:notice] %>
            <div class="alert alert-success" style="text-align:center;margin-bottom: auto;">
              <%= flash[:notice] %>
            </div>
          <% end %>
         <%= yield %>
    <%end%>
  </body>
</html>

