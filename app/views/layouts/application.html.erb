    <script src="/src/plugins/datatables/js/dataTables.responsive.min.js"></script>
    <script src="/src/plugins/datatables/js/responsive.bootstrap4.min.js"></script>
    <!-- Site favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="\vendors\images\home-logo.jpg"/>
    <link rel="icon" type="image/png" sizes="32x32" href="\vendors\images\home-logo.jpg"/>
